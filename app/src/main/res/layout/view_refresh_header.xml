<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="156dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/refresh_defaultheader_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/refresh_defaultheader_textView"
            android:layout_toStartOf="@+id/refresh_defaultheader_textView"
            android:src="@mipmap/arrow"
            android:contentDescription="@null"/>

        <ImageView
            android:id="@+id/refresh_defaultheader_progress_imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/refresh_defaultheader_textView"
            android:layout_toStartOf="@+id/refresh_defaultheader_textView"
            android:src="@mipmap/arrow"
            android:visibility="gone"
            android:contentDescription="@null"/>

        <TextView
            android:id="@+id/refresh_defaultheader_textView"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:minWidth="140dp"
            android:text="@string/refreshview_pull_down_to_refresh"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </RelativeLayout>
</FrameLayout>